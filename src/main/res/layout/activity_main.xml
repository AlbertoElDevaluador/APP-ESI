<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cr_view"
        android:layout_width="387dp"
        android:layout_height="70dp"
        android:layout_marginTop="88dp"
        android:textDirection="firstStrongRtl"
        app:cardBackgroundColor="#C1BCBC"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/buffer_text"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layoutDirection="inherit"
            android:text="0"
            android:textSize="48sp" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/boton_c"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FF8418"
        android:text="C"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:cornerRadius="100dp"
        app:iconTint="#FFF6F6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cr_view" />

    <Button
        android:id="@+id/boton_delete"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FF8418"
        android:text="D"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:cornerRadius="100dp"
        app:iconTint="#FFF6F6"
        app:layout_constraintStart_toEndOf="@+id/boton_c"
        app:layout_constraintTop_toBottomOf="@+id/cr_view" />

    <Button
        android:id="@+id/boton_div"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FF8418"
        android:text="รท"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp"
        app:cornerRadius="100dp"
        app:iconTint="#FFF6F6"
        app:layout_constraintStart_toEndOf="@+id/boton_delete"
        app:layout_constraintTop_toBottomOf="@+id/cr_view" />

    <Button
        android:id="@+id/boton_mod"
        android:layout_width="80dp"
