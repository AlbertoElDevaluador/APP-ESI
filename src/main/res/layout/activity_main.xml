    <Button
        android:id="@+id/boton_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#BCB4AD"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp"
        app:cornerRadius="100dp"
        app:iconTint="#FFF6F6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_c" />

    <Button
        android:id="@+id/boton_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#BCB4AD"
        android:text="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp"
        app:cornerRadius="100dp"
        app:iconTint="#FFF6F6"
        app:layout_constraintStart_toEndOf="@+id/boton_1"
        app:layout_constraintTop_toBottomOf="@+id/boton_delete" />

    <Button
        android:id="@+id/boton_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#BCB4AD"
        android:text="3"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp"
        app:cornerRadius="100dp"
        app:iconTint="#FFF6F6"
        app:layout_constraintStart_toEndOf="@+id/boton_2"
